@model CMS.Models.Footer

<h1>Create Footer</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="OrganizationName"></label>
        <input asp-for="OrganizationName" class="form-control" />
        <span asp-validation-for="OrganizationName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="10"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LocationAddress"></label>
        <input asp-for="LocationAddress" class="form-control" />
        <span asp-validation-for="LocationAddress" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

