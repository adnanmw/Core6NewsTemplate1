
<div class="row">
    <div class="col-lg-6">
        <h1>This is the blog page</h1>
    </div>
    <div class="col-lg-6 text-end">
        <a asp-controller="Blog" asp-action="Create" class="btn btn-primary ml-auto">Create Blog</a>
    </div>
</div>

@foreach (var blog in Model)
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@blog.Title</h5>
            <p class="card-text">@blog.Description</p>
            <img src="@blog.ImageUrl" class="img-fluid" alt="Blog Image" />

            @if (blog.Category != null)
            {
                <p class="card-text">Category: @blog.Category.Name</p>
            }
            else
            {
                <p class="card-text">No category</p>
            }


            <p class="card-text"><small class="text-muted">@blog.Author</small></p>
            <div class="d-flex">
                <form asp-controller="Blog" asp-action="Edit" asp-route-id="@blog.Id" method="get" class="mr-1">
                    <button type="submit" class="btn btn-primary">Edit</button>
                </form>
                <form asp-controller="Blog" asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@blog.Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>

            </div>
        </div>
    </div>
}


<style>
    /* This CSS will target all images inside the blog cards */
    .card-body img {
        max-width: 300px; /* Change the value to the desired maximum width */
    }
</style>