@model IEnumerable<CMS.Models.Service>
@{
    ViewData["Title"] = "Services";
}

<h1>Services</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Service</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    <img src="@item.ImageUrl" class="img-thumbnail" alt="@item.Title" style="width: 100px; height: 100px;" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this service?');" />
                        <input name="__RequestVerificationToken" type="hidden" value="@ViewData["AntiForgeryToken"]" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
